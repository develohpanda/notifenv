{
  "name": "Notifenv",
  "description": "A simple browser action to add a color and header for the current environment.",
  "version": "0.1",
  "permissions": [
    "tabs",
    "storage",
    "debugger"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/content.js",
        "js/constants.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/constants.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "manifest_version": 2
}