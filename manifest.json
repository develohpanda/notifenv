{
  "name": "Label",
  "description": "A simple extension to add a sticky label to the top of the page, depending on the hostname.",
  "version": "0.1",
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/content.js",
        "js/constants.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/constants.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "manifest_version": 2,
  "incognito": "spanning"
}